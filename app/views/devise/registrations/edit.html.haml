.registrations-edit
  = form_with model: @user, url: user_registration_path, class: "registrations-edit__form", local: true do |f|
    -# = render "devise/shared/error_messages", resource: resource
    -# - if devise_mapping.confirmable? && resource.pending_reconfirmation?
    -#   %div
    -#     Currently waiting confirmation for: #{resource.unconfirmed_email}

    .field
      = f.label :password, "新しいパスワード"
      - if @minimum_password_length
        = "（#{@minimum_password_length}文字以上）"
      %br
      = f.password_field :password, autocomplete: "new-password", required: true
    %br
    .field
      = f.label :password_confirmation, "パスワード（確認）"
      %br
      = f.password_field :password_confirmation, autocomplete: "new-password"
    %br
    .field
      = f.label :current_password, "現在のパスワード"
      %br
      = f.password_field :current_password, autocomplete: "current-password"
    .hidden-field
      = f.hidden_field :id
    %br
    .registrarions-edit__action
      = f.submit "変更"
  %footer
    = link_to "マイページへ戻る", user_path(@user)

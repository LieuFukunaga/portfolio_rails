%p
  = "リスト「#{@list.list_name}」のタスク一覧"
%p
  = link_to new_list_goal_path(@list) do
    %i.fas.fa-plus-circle
    %span タスクを追加
- if @goals.length != 0
  - @goals.each do |goal|
    %p
      = link_to list_goal_path(goal) do
        %i.fas.fa-angle-double-right
        = "#{goal.title}"
      - if goal.date != nil
        %h6
          = "#{goal.date.strftime("%Y年%m月%d日 %H時%M分")}"
- else
  %p -- NO TASK --

%p
  = link_to lists_path, class:"lists-show-icon" do
    %i.fas.fa-angle-left
    %span リスト一覧へ戻る
= render 'layouts/header'
%br
- breadcrumb :lists_new
= breadcrumbs separator: " &rsaquo; "
%br
.lists-new
  %h1.lists-new__page-title ＜リスト作成＞
  .lists-new__form
    = form_with model:@list, url: lists_path, local: true do |f|
      .field
        = f.label :list_name, "リスト名"
        %br
        = f.text_field :list_name
      .actions
        = f.submit "登録"
  %br
  = render partial: "layouts/return-to-root"
.lists-index
  %h1.lists-index__application-name Task 1-3-9
  %header.lists-index__header
  %br
    - if user_signed_in?
      .lists-index__header__user-name
        = "ようこそ #{current_user.name}さん"
      .lists-index__header__email
        = "#{current_user.email}でログインしています"
      %br
      .lists-index__header__logout-btn
        = link_to destroy_user_session_path, method: :delete do
          %i.fas.fa-sign-out-alt
          %span ログアウト
    - else
      %h2 ログインしていません
      .lists-index__header__login-btn
        =link_to "新規登録", new_user_registration_path
        =link_to new_user_session_path do
          %i.fas.fa-sign-in-alt
          %span ログイン
  .list-index__users-list
    %table
      %tbody
        %tr
          %th
            = "＜#{current_user.name}さんのリスト一覧＞"
        %tr
          %th
            = link_to new_list_path, class: "new-list-btn" do
              %i.fas.fa-plus-circle
              %span リストを追加
        - if current_user.lists.length != 0
          - current_user.lists.each do |list|
            %tr
              %td
                = link_to list_path(list) do
                  = "#{list.list_name}"
                  %i.fas.fa-angle-double-right
        - else
          %p -- NO LIST --
  %br
  = render partial: "layouts/link-to-category-index"
.common-header
  .common-header--left
    %h1.application-name Task 1-3-9

  .common-header--right
    - if user_signed_in?
      .common-header__user-info
        .login-user-avatar
          = link_to user_path(current_user) do
            - if current_user.avatar.attached?
              = image_tag current_user.avatar.variant(combine_options:{resize:"100x100^",crop:"100x100+0+0",gravity: :center}).processed.processed, id: "login-user-avatar"
            - else
              %i.fas.fa-user-circle
        -# .login-user-name
        -#   %b
        -#     = link_to "#{current_user.name}", user_path(current_user)

    - else
      %h2 ログインしていません
      .login-btn
        =link_to "新規登録", new_user_registration_path
        =link_to new_user_session_path do
          %i.fas.fa-sign-in-alt
          ログイン